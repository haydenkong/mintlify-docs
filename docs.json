{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "PixelVerse Support",
  "colors": {
    "primary": "#0867DF",
    "light": "#4BA1FF",
    "dark": "#064BB5"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Introduction",
            "pages": [
              "index",
              "quickstart",
              "development"
            ]
          }
        ]
      },
      {
        "tab": "Customization",
        "groups": [
          {
            "group": "Essentials",
            "pages": [
              "essentials/settings",
              "essentials/navigation"
            ]
          }
        ]
      },
      {
        "tab": "Writing",
        "groups": [
          {
            "group": "Content",
            "pages": [
              "essentials/markdown",
              "essentials/code",
              "essentials/images",
              "essentials/reusable-snippets"
            ]
          }
        ]
      },
      {
        "tab": "AI Tools",
        "groups": [
          {
            "group": "Integrations",
            "pages": [
              "ai-tools/cursor",
              "ai-tools/claude-code",
              "ai-tools/windsurf"
            ]
          }
        ]
      },
      {
        "tab": "Help & Contact",
        "groups": [
          {
            "group": "Get in Touch",
            "pages": [
              "contact"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Documentation",
          "href": "https://mintlify.com/docs",
          "icon": "book-open-cover"
        },
        {
          "anchor": "Blog",
          "href": "https://mintlify.com/blog",
          "icon": "newspaper"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg",
    "height": 40
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:hello@pixelverse.tech"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Back to PixelVerseIT",
      "href": "https://pixelverse.tech"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  },
  "layout": {
  "toc": false
  },
  "footer": {
    "socials": {
      "x-twitter": "https://x.com/pixelverseIT",
      "github": "https://github.com/PixelVerseIT",
      "instagram": "https://instagram.com/pixelverseit",
      "youtube": "https://youtube.com/@pixelverseIT"
    }
  }
}
